{{page-title (t "cart.title")}}
<nav class="mt-3 mb-3" aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><LinkTo class="link-offset-2" @route="home">{{t "home.title"}}</LinkTo></li>
    <li class="breadcrumb-item active" aria-current="page">{{t "cart.title"}}</li>
  </ol>
</nav>
<h1 class="mt-3">{{t "cart.title"}}</h1>
<p>{{t "cart.text"}}</p>

<Cart::List>
  {{#each this.cart.items as |item|}}
    <Cart::Row @item={{item}} />
  {{else}}
    <Cart::NoData />
  {{/each}}
</Cart::List>

<Cart::Total @total={{this.cart.total}} />

{{#if this.cart.items}}
  <div class="d-grid col-6 mx-auto">
    <button {{on "click" this.purchase}} type="button" class="btn btn-primary"><FaIcon @icon="credit-card"/> Purchase</button>
  </div>
{{/if}}
