{{page-title (t "inbox.title")}}
<Breadcrumb
  @items={{array (hash route="home" title=(t "home.title")) (hash route="settings" title=(t "settings.title"))}}
  @current={{t "inbox.title"}}
/>
<h1 class="mt-3">{{t "inbox.title"}}</h1>

<div class="list-group position-relative">
  {{#each @model as |item|}}
    {{!--<a href=""  class="remove-item bg-body-tertiary" {{on "click" (fn this.removeInboxItem item)}}>&times;</a>--}}
    <a href="" {{on "click" (fn this.openInboxItem item)}} class="list-group-item list-group-item-action d-flex justify-content-between align-items-start p-3">
      {{#unless item.opened}}
        <div class="inbox-item-opened bg-danger"></div>
      {{/unless}}
      {{#if item.notification.attachments}}
        <img class="inbox-item-attachment me-1" src={{get (get item.notification.attachments 0) "uri"}} alt="">
      {{/if}}
      <div class="ms-2 me-auto">
        <small class="mb-2 d-block">{{moment-format item.time "MMMM Do YYYY HH:mm"}}</small>
        {{#if item.notification.title}}
          <h5>{{item.notification.title}}</h5>
        {{/if}}
        {{#if item.notification.subtitle}}
          <h6>{{item.notification.subtitle}}</h6>
        {{/if}}
        <p>{{item.notification.message}}</p>
      </div>
    </a>
  {{/each}}
</div>