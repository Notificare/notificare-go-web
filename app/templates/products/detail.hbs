{{page-title @model.title}}
<nav class="mt-3 mb-3" aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><LinkTo class="link-offset-2" @route="home">{{t "home.title"}}</LinkTo></li>
    <li class="breadcrumb-item"><LinkTo class="link-offset-2" @route="products.index">{{t "products.index.title"}}</LinkTo></li>
    <li class="breadcrumb-item active" aria-current="page">{{@model.title}}</li>
  </ol>
</nav>
<h1>{{@model.title}}</h1>

<button {{on "click" this.addToCart}} type="button" class="btn btn-primary"><FaIcon @icon="cart-plus"/> Add to Cart</button>