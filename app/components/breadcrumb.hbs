<nav class="mt-3 mb-5" aria-label="breadcrumb">
  <ol class="breadcrumb">
    {{#each @items as |item|}}
      <li class="breadcrumb-item"><LinkTo class="link-offset-2" @route={{item.route}}>{{item.title}}</LinkTo></li>
    {{/each}}
    <li class="breadcrumb-item active" aria-current="page">{{@current}}</li>
  </ol>
</nav>