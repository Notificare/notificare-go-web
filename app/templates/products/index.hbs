{{page-title (t "products.index.title")}}
<Breadcrumb
  @items={{array (hash route="home" title=(t "home.title"))}}
  @current={{t "products.index.title"}}
/>
<h1 class="mt-3">{{t "products.index.title"}}</h1>
<div class="row">
  {{#each @model as |product|}}
    <div class="col-md-4">
      <LinkTo class="minimal-link" @route="products.detail" @model={{product}}>
        <Product::Card
          @product={{product}}
        />
      </LinkTo>
    </div>
  {{/each}}
</div>