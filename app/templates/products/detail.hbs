{{page-title @model.title}}
<nav class="mt-3 mb-3" aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><LinkTo class="link-offset-2" @route="home">{{t "home.title"}}</LinkTo></li>
    <li class="breadcrumb-item"><LinkTo class="link-offset-2" @route="products.index">{{t "products.index.title"}}</LinkTo></li>
    <li class="breadcrumb-item active" aria-current="page">{{@model.title}}</li>
  </ol>
</nav>
<h1>{{@model.title}}</h1>

<div class="card mb-3">
  <div class="row g-0">
    <div class="col-sm-6">
      <img src={{default-value @model.image "https://placehold.co/1200x600?text=No+Preview"}} class="img-fluid rounded" alt={{@model.title}}>
    </div>
    <div class="col-sm-6">
      <div class="card-body">
        <p class="card-text">{{@model.description}}</p>
        <p class="card-text"><h5 class="text-body-secondary">{{concat "â‚¬" @model.price}}</h5></p>
        <button {{on "click" this.addToCart}} type="button" class="btn btn-primary"><FaIcon @icon="cart-plus"/> Add to Cart</button>
      </div>
    </div>
  </div>
</div>